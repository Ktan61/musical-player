<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Playlist</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/create.css">
</head>
<body>
    <h1>Create New Playlist</h1>
    <button onclick="window.location.href='/'">Go Back to Home</button>

    <div class="content">
    <!-- Left column: Song List with Plus Icon -->
    <div class="left-column">
        <h2>All Songs</h2>
        <ul id="song-list">
            <% songInfo.forEach(song => { %>
                <li>
                    <img src="<%= song.album_cover_link %>" alt="Album Cover" width="50">
                    <p><%= song.title %> by <%= song.artist %></p>
                    <button onclick="addToPlaylist('<%= song.id %>', '<%= song.title %>', '<%= song.artist %>', '<%= song.album_cover_link %>')">+</button>
                </li>
            <% }) %>
        </ul>
    </div>
    
    <!-- Right column: Playlist with Songs -->
    <div class="right-column">
        <h2>Create a New Playlist</h2>

        <!-- Playlist Name Input -->
        <div>
            <label for="playlistName">Playlist Name:</label>
            <input type="text" id="playlistName" placeholder="Enter playlist name" required>
        </div>

        <ul id="playlist">
            <!-- Playlist songs will be added here -->
        </ul>
        
        <button onclick="savePlaylist()">Save Playlist</button>
    </div>
    </div>

    <script>
        let playlist = [];  // Stores all songs added to the playlist

        // Function to add song to playlist
        function addToPlaylist(songId, songTitle, songArtist, albumCoverLink) {
            if (!playlist.some(song => song.id === songId)) {  // Prevent duplicates
                const song = { 
                    id: songId, 
                    title: songTitle, 
                    artist: songArtist, 
                    albumCoverLink: albumCoverLink,
                    element: null  // To store the DOM element for this song
                };

                playlist.push(song); 

                // Create a new list item for the song
                const songElement = document.createElement('li');
                songElement.classList.add('playlist-song');
                songElement.innerHTML = `
                    <img src="${albumCoverLink}" alt="Album Cover" width="50">
                    <strong>${songTitle}</strong> by ${songArtist}
                    <button onclick="removeFromPlaylist(this.parentElement, '${songId}')">Remove</button>
                `;

                // Store the song element in the playlist array
                song.element = songElement;

                // Display the song in the playlist UI
                document.getElementById('playlist').appendChild(songElement);
            }
        }

        // Function to remove song from playlist
        function removeFromPlaylist(songElement, songId) {
            playlist = playlist.filter(song => song.id !== songId);  // Remove song from array
            songElement.remove();  // Remove from UI
        }

        // Function to save the playlist (send to server)
        function savePlaylist() {
    const playlistName = document.getElementById('playlistName').value.trim();

    if (!playlistName) {
        alert('Please enter a playlist name.');
        return;
    }

    if (playlist.length === 0) {
        alert('Please add songs to your playlist!');
        return;
    }

    const dataToSend = { name: playlistName, playlist: playlist };

    console.log("Data Before Sending:", JSON.stringify(dataToSend));  // Check if the data is structured properly

    fetch('/playlists', {
        method: 'POST',
        headers: { 
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(dataToSend)
    })
    .then(response => response.json())
    .then(data => {
        console.log('Server Response:', data);
        alert(data.message);
        window.location.href = '/profile';
    })
    .catch(error => console.error('Error:', error));
}

    </script>
</body>
</html>
