<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Browse Music</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/browse.css" />
  </head>
  <body>
    <div class="browse-page">
      <button class="go-back-btn" onclick="window.location.href='/'">
        Go Back to Home
      </button>

      <div class="content">
        <!-- Left column: Song List -->
        <div class="songs-column">
          <h2>All Songs</h2>
          <ul id="song-list">
            <% if (Array.isArray(songInfo)) { %> <% songInfo.forEach(song => {
            %> <% if (song.song_link && song.album_cover_link) { %>
            <li>
              <button
                onclick="playSong('<%= encodeURI(song.song_link.replace(`open.spotify.com`, `open.spotify.com/embed`)) %>', this)"
                class="song-button"
              >
                <div class="button-main-info">
                  <img
                    src="<%= song.album_cover_link %>"
                    alt="Album Cover"
                    width="100"
                  />
                  <div class="song-info">
                    <p class="song-title"><%= song.title %></p>
                    <p class="artist"><%= song.artist %></p>
                  </div>
                </div>
                <p class="three-dots">&#8943;</p>
              </button>
            </li>
            <% } %> <% }) %> <% } else { %>
            <p>No songs available.</p>
            <% } %>
          </ul>
        </div>

        <!-- Right column: Music Player -->
        <div class="playing-column">
          <h2>In Queue</h2>
          <div id="player-container">
            <p id="no-song-message">You are currently not playing any songs.</p>
          </div>
        </div>
      </div>
    </div>

    <script>
      function playSong(songLink, button) {
        const playerContainer = document.getElementById("player-container");

        if (
          !songLink ||
          !songLink.startsWith("https://open.spotify.com/embed/")
        ) {
          alert("Invalid song link.");
          return;
        }

        playerContainer.innerHTML = "";

        const iframe = document.createElement("iframe");
        iframe.style.borderRadius = "12px";
        iframe.src = songLink;
        iframe.width = "100%";
        iframe.height = "352";
        iframe.frameBorder = "0";
        iframe.allow =
          "autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture";
        iframe.loading = "lazy";

        playerContainer.appendChild(iframe);

        document
          .querySelectorAll(".song-button")
          .forEach((btn) => btn.classList.remove("active"));

        button.classList.add("active");
      }
    </script>
  </body>
</html>
