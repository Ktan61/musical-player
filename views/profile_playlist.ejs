<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= playlist.name %> - Playlist
    </title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/profile-playlist.css">
</head>

<body>
    <div class="browse-page">
        <button class="go-back-btn" onclick="window.location.href='/profile'">Go Back to Profile</button>

        <div class="content">
            <!-- Left column: Song List -->
            <div class="songs-column">
                <h2>
                    <%= playlist.name %>
                </h2>
                <div class="playlist-container">
                    <% if (songsInPlaylist.length> 0) { %>
                        <ul id="song-list">
                            <% songsInPlaylist.forEach(song=> { %>
                                <% if (song.song_link && song.album_cover_link) { %>
                                    <li>
                                        <button onclick="playSong(
                                                '<%= encodeURI(song.song_link.replace(`open.spotify.com`, `open.spotify.com/embed`)) %>',  
                                                '<%= song.album %>', 
                                                '<%= song.release_year %>',
                                                this
                                            )" class="song-button">
                                            <div class="button-main-info">
                                                <img src="<%= song.album_cover_link %>" alt="Album Cover" width="100">
                                                <div class="song-info">
                                                    <p class="song-title">
                                                        <%= song.title %>
                                                    </p>
                                                    <p class="artist">
                                                        <%= song.artist %>
                                                    </p>
                                                </div>
                                            </div>
                                            <p class="three-dots">&#8943;</p>
                                        </button>
                                    </li>
                                    <% } %>
                                        <% }) %>
                        </ul>
                        <% } else { %>
                            <p>This playlist is empty.</p>
                            <% } %>
                </div>
            </div>

            <!-- Right column: Music Player -->
            <div class="playing-column">
                <h2>In Queue</h2>
                <div id="player-container">
                    <p id="no-song-message">You are currently not playing any songs.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function playSong(songLink, albumName, releaseYear, button) {
            const playerContainer = document.getElementById("player-container");

            if (!songLink || !songLink.startsWith("https://open.spotify.com/embed/")) {
                alert("Invalid song link.");
                return;
            }

            playerContainer.innerHTML = "";

            const iframe = document.createElement("iframe");
            iframe.style.borderRadius = "12px";
            iframe.src = songLink;
            iframe.width = "100%";
            iframe.height = "352";
            iframe.frameBorder = "0";
            iframe.allow = "autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture";
            iframe.loading = "lazy";

            playerContainer.appendChild(iframe);

            const albumInfo = document.createElement("div");
            albumInfo.classList.add("album-info");
            albumInfo.innerHTML = `<p class="album-name"><span class="bold">FROM</span> ${albumName} | ${releaseYear}</p>`;
            playerContainer.appendChild(albumInfo);

            document.querySelectorAll(".song-button").forEach(btn => btn.classList.remove("active"));
            button.classList.add("active");
        }
    </script>
</body>

</html>