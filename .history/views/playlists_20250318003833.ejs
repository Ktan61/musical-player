<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Playlists</title>
</head>
<body>
    <h1>Your Playlists</h1>

    <form action="/playlists/<%= playlist.id %>/songs" method="POST">
        <select name="songId">
            <% songInfo.forEach(song => { %>
                <option value="<%= song.id %>"><%= song.title %> - <%= song.artist %></option>
            <% }) %>
        </select>
        <button type="submit">Add Song to Playlist</button>
    </form>
    

    <ul>
        <% playlists.forEach(playlist => { %>
            <li>
                <a href="/playlists/<%= playlist.id %>"><%= playlist.name %></a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
